# Benchmarking execution - Spikes
```


hic_path="../test_data/GM12878-HRC.hic"
chromosomes=(20 21 22)
resolutions=(50000)
pval=(0.01)
k_spikes=(2 3 4)

for resolution in ${resolutions[@]}; do
    for chromosome in ${chromosomes[@]};do
        for p_val in ${pval[@]}; do
            for k in ${k_spikes[@]}; do
                sbatch --job-name=Benchmarking_DifFraction_spikes_chr${chromosome}_res${resolution} \
                    run_benchmarking.sh \
                    -f ${hic_path} -c ${chromosome} -r ${resolution} -k ${k} -p ${p_val}
            done
        done
    done
done

```

# Benchmarking execution - Downsample
```


hic_path="../test_data/GM12878-HRC.hic"
chromosomes=(20 21 22)
resolutions=(100000)
pval=(0.01)
ds=(0.1 0.25 0.5 0.75 1.0)

for resolution in ${resolutions[@]}; do
    for chromosome in ${chromosomes[@]};do
        for p_val in ${pval[@]}; do
            for d in ${ds[@]}; do
                sbatch --job-name=Benchmarking_DifFracTion_chr${chromosome}_res${resolution} \
                    run_benchmarking_downsample.sh \
                    -f ${hic_path} -c ${chromosome} -r ${resolution} -d ${d} -p ${p_val}
            done
        done
    done
done

```
